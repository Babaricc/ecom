<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:background="#EFEEEE"
        android:elevation="10sp"
        app:cardCornerRadius="5sp"
        app:cardElevation="10sp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5sp">

                <TextView
                    android:id="@+id/order_item_id"
                    android:layout_width="0sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:layout_weight="2"
                    android:gravity="top"
                    android:maxLines="1"
                    android:text="Order:345GH3w5354"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_item_date"
                    android:layout_width="0sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:layout_weight="1"
                    android:text="Order Date: 25 June 23"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5sp">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:maxLines="1"
                        android:text="Status:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/order_item_status"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_weight="2"
                        android:gravity="top"
                        android:maxLines="1"
                        android:text="Delivered"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/order_item_delivery_Date"
                    android:layout_width="0sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:layout_weight="1"
                    android:text="Delivery Date: 25 June 23"
                    android:textSize="10sp" />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginTop="10sp"

                android:layout_weight="1"
                android:maxLines="5"
                android:paddingLeft="5sp"
                android:layout_marginBottom="5sp"
                android:textColor="@color/common_border_color"
                android:text="Shipping Address"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_item_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginTop="5sp"
                android:layout_weight="1"
                android:maxLines="5"
                android:layout_margin="7sp"
                android:text="Note: If you wanted to change the badge count later on, you could store a reference to the Menu object passed to onCreateOptionsMenu and use the same code to get the required view and set a value."
                android:textSize="10sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/costCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:paddingStart="5sp"
                android:text="Cost Details"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5sp"
                    android:text="SubTotal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ordersSubTotalAmount"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PKR 2345"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView456"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5sp"
                    android:text="Sales Tax"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ordersSalesTaxAmount"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7.5%"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5sp"
                    android:text="Total"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ordersTotalAmount"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PKR 2345"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_products_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:elevation="10sp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:paddingStart="5sp"
                android:text="Products Detail"
                android:textSize="22sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ordersProductsRecyclerview"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layoutAnimation="@anim/layout_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>